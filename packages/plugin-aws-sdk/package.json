{
    "name": "opentelemetry-plugin-aws-sdk",
    "version": "0.0.13",
    "description": "open telemetry instrumentation for the `aws-sdk` package",
    "keywords": [
        "aws",
        "opentelemetry",
        "aws-sdk"
    ],
    "homepage": "https://github.com/aspecto-io/opentelemetry-ext-js",
    "license": "Apache-2.0",
    "main": "dist/src/index.js",
    "files": [
        "dist/src/**/*.js",
        "dist/src/**/*.d.ts",
        "LICENSE",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/aspecto-io/opentelemetry-ext-js.git"
    },
    "scripts": {
        "build": "tsc",
        "prepare": "yarn run build",
        "test": "jest",
        "watch": "tsc -w",
        "prettier": "prettier --config ../../.prettierrc.yml --write \"src/**/*.{ts,tsx,js,jsx,json}\""
    },
    "bugs": {
        "url": "https://github.com/aspecto-io/opentelemetry-ext-js/issues"
    },
    "devDependencies": {
        "@opentelemetry/node": "^0.12.0",
        "@opentelemetry/tracing": "^0.12.0",
        "@types/jest": "^26.0.15",
        "@types/shimmer": "^1.0.1",
        "aws-sdk": "^2.780.0",
        "husky": "^4.3.0",
        "jest": "^26.6.1",
        "lint-staged": "^10.5.0",
        "prettier": "2.1.2",
        "ts-jest": "^26.4.3",
        "typescript": "^4.0.5"
    },
    "dependencies": {
        "@opentelemetry/api": "^0.12.0",
        "@opentelemetry/core": "^0.12.0",
        "opentelemetry-propagation-utils": "^0.0.2",
        "shimmer": "^1.2.1"
    },
    "jest": {
        "preset": "ts-jest",
        "globals": {
            "ts-jest": {
                "tsconfig": "./tsconfig.json"
            }
        },
        "testMatch": [
            "**/test/**/*.spec.+(ts|tsx)"
        ],
        "testEnvironment": "node"
    },
    "husky": {
        "hooks": {
            "pre-push": "yarn test",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js,json}": [
            "prettier --write"
        ]
    }
}
