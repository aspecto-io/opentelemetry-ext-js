{
  "name": "root",
  "private": true,
  "scripts": {
    "test": "lerna run test",
    "build": "lerna run build",
    "postinstall": "lerna bootstrap",
    "prettier": "prettier --config .prettierrc.yml --write \"packages/**/*.{ts,tsx,js,jsx,json}\""
  },
  "devDependencies": {
    "husky": "^4.3.6",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-push": "yarn test",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "prettier --write"
    ]
  }
}